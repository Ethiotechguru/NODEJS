</head>
<body>
<%- include('includes/nav.ejs') %>  
<% if(users.length>0){%>
    <div class="container">
        <% users.forEach(user =>{%>
            <div class="card">
                <h1><%=user.title%></h1>
                <img src="<%=user.imageUrl%>" alt="Camera"/>
                <h3>$<%=user.price%></h3>
                <p><%=user.description%></p>
                <form action="/cart" method="POST">
                    <button>Add to Cart</button>
                    <input type="hidden" name="productId" value="<%= user._id %> ">
                </form>
            </div>
        <%})%> 
    </div>
<%}else{%>
    <div class="container">
        <h1>No user Found</h1>
    </div>
        
    <%}%> 
<%- include('includes/end.ejs') %>  