<%- include('includes/head.ejs') %> 
    <link rel="stylesheet" href="/form.css">
</head>
<body>
    <%- include('includes/nav.ejs') %> 
<form class="product-form" action ="/<% if(editing){%>edit-product<%}else{%>add-product<%}%>" method="POST">
        <div class="card">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) {%><%= user.title%><% } %>" required>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing) {%><%= user.imageUrl%><% } %>" required>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(editing) {%><%= user.price%><% } %>" required>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><% if(editing){ %><%= user.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= user._id %>" name="productId">
            <% } %>
            <button type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </div>
    </form>
    
<%- include('includes/end.ejs') %> 